<main role="main" class="main-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">


                <div class="card shadow mb-4">
                    <div class="card-header">
                        <strong class="card-title">ویرایش دسته بندی رویداد</strong>
                        <a href="/dashboard/event_category/"
                            style="color: #1b68ff; font-size: 0.85rem; text-decoration: none; margin: 2px ; border-radius: 10px; position: absolute; left: 20px; border: 1px solid #1b68ff; padding: 0px 10px;">
                            <i class="fa fa-sign-out" style="margin: 5px;"></i>
                            بازگشت</a>
                        <a href="/dashboard/event_category/add"
                            style="color: #1b68ff; font-size: 0.85rem; text-decoration: none; margin: 2px ; border-radius: 10px; position: absolute; left: 120px; border: 1px solid #1b68ff; padding: 0px 10px;">
                            <i class="fa fa-add" style="margin: 5px;"></i>
                            افزودن</a>
                    </div>
                    <div class="card-body">
                        <form id="frm_updateEventCategory">
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="form-group mb-3">
                                        <label for="title" style="font-size: 0.9rem;">عنوان</label>
                                        <%if(eventCategory.title) {%>
                                            <input type="text" name="title" id="title" class="form-control"
                                                style="background-color: rgb(243, 243, 243);"
                                                placeholder="<%= eventCategory.title%>">
                                            <%} else {%>
                                                <input type="text" name="title" id="title" class="form-control"
                                                    style="background-color: rgb(243, 243, 243);" placeholder="">
                                                <%}%>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="slug" style="font-size: 0.9rem;">عنوان انگلیسی</label>
                                        <%if(eventCategory.slug){%>
                                            <input type="text" id="slug" name="slug" class="form-control"
                                                style="background-color: rgb(243, 243, 243);"
                                                placeholder="<%=eventCategory.slug%>">
                                            <%} else{%>
                                                <input type="text" id="slug" name="slug" class="form-control"
                                                    style="background-color: rgb(243, 243, 243);" placeholder="">
                                                <%}%>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="parentinput" style="font-size: 0.9rem;">دسته بندی والد</label>

                                        <select name="parent"
                                            style="font-size: 0.75rem; background-color: rgb(243, 243, 243);"
                                            class="form-control select2" id="parentinput">
                                            <%if(eventCategories.paren){%>
                                                <option>
                                                    <%= eventCategories.parent.title%>
                                                </option>
                                                <%}else{%>
                                                    <option value="6589d430053a84a4ed2d9829">نامشخص</option>
                                                    <%}%>
                                                        <optgroup>
                                                            <option value="6589d430053a84a4ed2d9829">نامشخص</option>
                                                            <%eventCategories.forEach(item=> {%>
                                                                <option value="<%=item._id%>">
                                                                    <%= item.title%>
                                                                </option>
                                                                <%})%>
                                                        </optgroup>
                                        </select>
                                        <div class="invalid-feedback"> Please select a valid state. </div>

                                    </div>

                                    <div class="form-group mb-3">
                                        <label style="font-size: 0.9rem;" for="description">توضیحات</label>
                                        <%if(eventCategory.description){%>
                                            <textarea name="description" class="form-control"
                                                style="font-size: 0.8rem; background-color: rgb(243, 243, 243);"
                                                id="description" rows="6"
                                                placeholder="<%= eventCategory.description%>"></textarea>
                                            <%} else{%>
                                                <textarea name="description" class="form-control"
                                                    style="font-size: 0.8rem; background-color: rgb(243, 243, 243);"
                                                    id="description" rows="6"></textarea>
                                                <%}%>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label style="font-size: 0.9rem;" for="tags">برچسب ها (با - جدا شود)</label>
                                        <div class="col-sm-12">
                                            <%if(eventCategory.tags){%>
                                                <textarea name="tags" class="form-control"
                                                    style="font-size: 0.8rem; background-color: rgb(243, 243, 243);"
                                                    id="tags" rows="6" placeholder="<%=eventCategory.tags%>"></textarea>
                                                <%} else{%>
                                                    <textarea name="tags" class="form-control"
                                                        style="font-size: 0.8rem; background-color: rgb(243, 243, 243);"
                                                        id="tags" rows="6" placeholder=""></textarea>
                                                    <%}%>

                                        </div>
                                    </div>

                                    <div class="form-group mb-3 col-sm-12">
                                        <label for="show_in_archive" style="font-size: 0.9rem;">نمایش در آرشیو</label>
                                        <%if(eventCategory.show_in_archive==true){%>
                                            <select name="show_in_archive" style="background-color: rgb(243, 243, 243);"
                                                id="show_in_archive" class="form-control">
                                                <option selected value="true">فعال</option>
                                                <option value="false">غیر فعال</option>
                                            </select>
                                            <%} else if(eventCategory.show_in_archive==false){%>
                                                <select name="show_in_archive"
                                                    style="background-color: rgb(243, 243, 243);" id="show_in_archive"
                                                    class="form-control">
                                                    <option value="true">فعال</option>
                                                    <option selected value="false">غیر فعال</option>
                                                </select>
                                                <%}%>


                                    </div>

                                    <div class="form-group mb-2">
                                        <button onclick="updateEventCategory('<%= eventCategory.code%>')" class="btn btn-primary"
                                            style="padding: 5px 20px; font-size: 0.85rem;">ثبت
                                            اطلاعات</button>
                                    </div>

                                </div> <!-- /.col -->
                            </div>
                        </form>

                        <%if(messages){%>
                            <div class="alert">
                                <strong style="color: rgb(51, 141, 56);">

                                    <%= messages?? "" %>
                                </strong>
                            </div>
                            <%}%>
                                <%if(errors){%>

                                    <div class="alert">
                                        <strong style="color: rgb(245, 39, 108);">
                                            <%= errors?? "" %>
                                        </strong>
                                    </div>
                                    <%}%>



                    </div>
                </div> <!-- / .card -->
            </div> <!-- .col-12 -->
        </div> <!-- .row -->
    </div> <!-- .container-fluid -->
</main> <!-- main -->

<script type="text/javascript">

    $(document).ready(function () {

        window.setTimeout(function () {

            $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                $(this).remove();
            });
        }, 2000);

    });
</script>