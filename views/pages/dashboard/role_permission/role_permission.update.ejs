<main role="main" class="main-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">


                <div class="card shadow mb-4">
                    <div class="card-header">
                        <strong class="card-title">ویرایش نقش _ مجوز</strong>
                        <a href="/dashboard/role_permission/"
                            style="color: #1b68ff; font-size: 0.85rem; text-decoration: none; margin: 2px ; border-radius: 10px; position: absolute; left: 20px; border: 1px solid #1b68ff; padding: 0px 10px;">
                            <i class="fa fa-sign-out" style="margin: 5px;"></i>
                            بازگشت</a>
                        <a href="/dashboard/role_permission/add"
                            style="color: #1b68ff; font-size: 0.85rem; text-decoration: none; margin: 2px ; border-radius: 10px; position: absolute; left: 120px; border: 1px solid #1b68ff; padding: 0px 10px;">
                            <i class="fa fa-add" style="margin: 5px;"></i>
                            افزودن</a>
                    </div>
                    <div class="card-body">
                        <form id="frm_updateRolePermission">
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="form-group mb-3">
                                        <label for="role_id" style="font-size: 0.9rem;">نقش</label>
                                        <select name="role_id"
                                            style="font-size: 0.75rem; background-color: rgb(243, 243, 243);"
                                            class="form-control select2 col-sm-6" id="role_id">
                                            <%if(rolePermission.role_id){%>
                                            <option><%=rolePermission.role_id.title%></option>
                                            <%} else{%> 
                                            <option></option>
                                            <%}%>
                                            <optgroup>
                                                <%roles.forEach(item => {%> 
                                                <option value="<%=item._id%>"><%=item.title%></option>
                                                <%})%> 
                                            </optgroup>
                                        </select>
                                        <div class="invalid-feedback"> Please select a valid state. </div>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="permission_id" style="font-size: 0.9rem;">مجوز</label>
                                        <select name="permission_id"
                                            style="font-size: 0.75rem; background-color: rgb(243, 243, 243);"
                                            class="form-control select2 col-sm-6" id="permission_id">
                                            <%if(rolePermission.permission_id){%>
                                            <option><%=rolePermission.permission_id.title%></option>
                                            <%} else{%> 
                                            <option></option>
                                            <%}%>
                                            <optgroup>
                                                <%permissions.forEach(item => {%> 
                                                <option value="<%=item._id%>"><%=item.title%></option>
                                                <%})%> 
                                            </optgroup>
                                        </select>
                                        <div class="invalid-feedback"> Please select a valid state. </div>
                                    </div>

                                    <div class="form-group mb-2">
                                        <button onclick="updateRolePermission('<%= rolePermission.code%>')" class="btn btn-primary"
                                            style="padding: 5px 20px; font-size: 0.85rem;">ویرایش اطلاعات</button>
                                    </div>

                                </div> <!-- /.col -->
                            </div>
                        </form>

                        <%if(messages){%>
                            <div class="alert">
                                <strong style="color: rgb(51, 141, 56);">

                                    <%= messages?? "" %>
                                </strong>
                            </div>
                            <%}%>
                                <%if(errors){%>

                                    <div class="alert">
                                        <strong style="color: rgb(245, 39, 108);">
                                            <%= errors?? "" %>
                                        </strong>
                                    </div>
                                    <%}%>



                    </div>
                </div> <!-- / .card -->
            </div> <!-- .col-12 -->
        </div> <!-- .row -->
    </div> <!-- .container-fluid -->
</main> <!-- main -->

<script type="text/javascript">

    $(document).ready(function () {

        window.setTimeout(function () {

            $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                $(this).remove();
            });
        }, 2000);

    });
</script>