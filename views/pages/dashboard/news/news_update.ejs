<main role="main" class="main-content">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-12">


        <div class="card shadow mb-4">
          <div class="card-header">
            <strong class="card-title">ویرایش خبر</strong>
            <a href="/dashboard/news/"
              style="color: #1b68ff; font-size: 0.85rem; text-decoration: none; margin: 2px ; border-radius: 10px; position: absolute; left: 20px; border: 1px solid #1b68ff; padding: 0px 10px;">
              <i class="fa fa-sign-out" style="margin: 5px;"></i>
              بازگشت</a>
            <a href="/dashboard/news/add"
              style="color: #1b68ff; font-size: 0.85rem; text-decoration: none; margin: 2px ; border-radius: 10px; position: absolute; left: 120px; border: 1px solid #1b68ff; padding: 0px 10px;">
              <i class="fa fa-plus" style="margin: 5px;"></i>
              افزودن</a>
          </div>
          <div class="card-body">
            <form id="frm_updateNews">
              <div class="row">
                <div class="col-md-8">

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="image_input" style="font-size: 0.9rem;">انتخاب تصویر</label>
                      <input type="file" name="image" id="input-b1" class="file" style="padding-left: 10px;"
                        data-browse-on-zone-click="true" placeholder="<%= news.file.coverImageUrl%>">
                    </div>

                    <div class="card-deck mb-4" style="margin-right: 30px; margin-top: 20px;">
                      <div class="card border-0 bg-transparent">
                        <img src="<%= news.file.coverImageUrl%>" alt="..." class="card-img-top img-fluid rounded">
                        <div class="card-body">
                          <h5 class="h6 card-title mb-1">نام فایل : <%= news.file.filename%>
                          </h5>
                          <p class="card-text">
                            <span class="badge badge-light text-muted mr-2">سایز تصویر : MB <%= news.file.size%> </span>
                            <span class="badge badge-pill badge-light text-muted">فرمت فایل : <%= news.file.mimetype%>
                            </span>
                          </p>
                        </div>
                      </div> <!-- .card -->
                    </div>
                  </div>

                  <div class="form-group mb-3">
                    <label for="foreword" style="font-size: 0.9rem;">پیش عنوان <span
                        style="color: rgb(255, 90, 90);">(اختیاری)</span></label>
                    <%if(news.foreword){%>
                      <input type="text" name="foreword" id="foreword" class="form-control"
                        style="background-color: rgb(243, 243, 243);" placeholder="<%= news.foreword%>">
                      <%} else{%>
                        <input type="text" name="foreword" id="foreword" class="form-control"
                          style="background-color: rgb(243, 243, 243);" placeholder="">
                        <%}%>

                  </div>

                  <div class="form-group mb-3">
                    <label for="title" style="font-size: 0.9rem;">عنوان</label>
                    <%if(news.title){%>
                      <input type="text" name="title" id="title" class="form-control"
                        style="background-color: rgb(243, 243, 243);" placeholder="<%= news.title%>">
                      <%} else{%>
                        <input type="text" name="title" id="title" class="form-control"
                          style="background-color: rgb(243, 243, 243);" placeholder="">
                        <%}%>

                  </div>

                  <div class="form-group mb-3">
                    <label for="slug" style="font-size: 0.9rem;">عنوان انگلیسی</label>
                    <%if(news.foreword){%>
                      <input type="text" id="slug" name="slug" class="form-control"
                        style="background-color: rgb(243, 243, 243);" placeholder="<%= news.slug%>">
                      <%} else{%>
                        <input type="text" id="slug" name="slug" class="form-control"
                          style="background-color: rgb(243, 243, 243);" placeholder="">
                        <%}%>

                  </div>

                  <div class="form-group mb-3">
                    <label for="news_category_id" style="font-size: 0.9rem;">دسته بندی</label>
                    <select name="news_category_id" style="font-size: 0.75rem; background-color: rgb(243, 243, 243);"
                      class="form-control col-sm-6" id="news_category_id">
                      <%if(news.news_category_id){%>
                        <option value="<%= news.news_category_id._id%>">
                          <%= news.news_category_id.title%>
                        </option>
                        <%} else{%>
                          <option></option>
                          <%}%>
                            <optgroup>
                              <% newsCategories.forEach(item=> {%>
                                <option value="<%= item._id%>"><%= item.title%></option>
                                <%})%>
                            </optgroup>
                    </select>
                    <div class="invalid-feedback"> Please select a valid state. </div>
                  </div>

                  <div class="form-group mb-3">
                    <label style="font-size: 0.9rem;" for="short_text">متن کوتاه</label>
                    <div class="col-sm-12">
                      <%if(news.short_text){%> 
                        <textarea name="short_text" class="form-control"
                        style="font-size: 0.8rem; background-color: rgb(243, 243, 243);" id="short_text"
                        rows="6" placeholder="<%= news.short_text%>"></textarea>
                        <%} else{%>
                          <textarea name="short_text" class="form-control"
                        style="font-size: 0.8rem; background-color: rgb(243, 243, 243);" id="short_text"
                        rows="6" placeholder=""></textarea>
                          <%}%>
                      
                    </div>
                  </div>

                  <div class="form-group mb-3">
                    <label style="font-size: 0.9rem;" for="text">متن</label>
               
                    <div class="col-sm-12">
                      <%if(news.text){%> 
                        <textarea name="text" placeholder="<%= news.text%>" id="editor" rows="10" cols="80"
                        style="height: 450px;"></textarea>
                        <%} else{%> 
                          <textarea name="text" placeholder="" id="editor" rows="10" cols="80"
                        style="height: 450px;"></textarea>
                          <%}%>
                      
                    </div>
                  </div>

                  <div class="form-group mb-3">
                    <label style="font-size: 0.9rem;" for="tags">برچسب ها (با - جدا
                      شود)</label>
                    <div class="col-sm-12">
                      <%if(news.tags){%> 
                        <textarea name="tags" class="form-control" placeholder="<%= news.tags%>"
                        style="font-size: 0.8rem; background-color: rgb(243, 243, 243);" id="tags" rows="6"></textarea>
                        <%} else{%> 
                          <textarea name="tags" class="form-control" placeholder=""
                        style="font-size: 0.8rem; background-color: rgb(243, 243, 243);" id="tags" rows="6"></textarea>
                          <%}%>
                      
                    </div>
                  </div>

                  <div class="form-group mb-3">
                    <label for="source" style="font-size: 0.9rem;">منبع خبر</label>
                    <%if(news.source){%> 
                      <input type="text" name="source" id="source" class="form-control"
                      style="background-color: rgb(243, 243, 243);" placeholder="<%= news.source%>">
                      <%} else{%> 
                        <input type="text" name="source" id="source" class="form-control"
                        style="background-color: rgb(243, 243, 243);" placeholder="">
                        <%}%>
                    
                  </div>

                  <div class="form-group mb-3">
                    <label for="published_status" style="font-size: 0.9rem;">وضعیت انتشار</label>
                    <div class="col-sm-3">
                      <%if(news.published_status == true){%> 
                        <select name="published_status" style="background-color: rgb(243, 243, 243);"
                        id="published_status" class="form-control">
                        <option selected value="true">فعال</option>
                        <option value="false">غیر فعال</option>
                      </select>
                        <%} else if(news.published_status == false){%> 
                          <select name="published_status" style="background-color: rgb(243, 243, 243);"
                          id="published_status" class="form-control">
                          <option value="true">فعال</option>
                          <option selected value="false">غیر فعال</option>
                        </select>
                          <%}%>
                     
                    </div>
                  </div>

                  <div class="form-group mb-3">
                    <label for="published_time" style="font-size: 0.9rem;">زمان انتشار</label>
                    <div class="col-sm-6">
                      <%if(news.published_time){%> 
                        <input name="published_time" style="background-color: rgb(243, 243, 243);"
                        class="form-control sample-date-picker bg-white w-100 p-3" placeholder="<%= news.published_time%>" type="text"
                        id="published_time">
                        <%} else{%> 
                          <input name="published_time" style="background-color: rgb(243, 243, 243);"
                        class="form-control sample-date-picker bg-white w-100 p-3" placeholder="" type="text"
                        id="published_time">
                          <%}%>
                      
                    </div>
                  </div>

                  <div class="form-group mb-3">
                    <label for="breaking_news" style="font-size: 0.9rem;">خبر فوری</label>
                    <div class="col-sm-3">
                      <%if(news.breaking_news == true){%> 
                        <select name="breaking_news" style="background-color: rgb(243, 243, 243);" id="breaking_news"
                        class="form-control">
                        <option selected value="true">فعال</option>
                        <option value="false">غیر فعال</option>
                      </select>
                        <%} else if(news.breaking_news == false){%> 
                          <select name="breaking_news" style="background-color: rgb(243, 243, 243);" id="breaking_news"
                        class="form-control">
                        <option value="true">فعال</option>
                        <option selected value="false">غیر فعال</option>
                      </select>
                          <%}%>
                      
                    </div>
                  </div>

                  <div class="form-group mb-2">
                    <button onclick="updateNews()" class="btn btn-primary"
                      style="padding: 5px 20px; font-size: 0.85rem;">ویرایش خبر</button>
                  </div>

                </div> <!-- /.col -->
              </div>
            </form>

            <%if(messages){%>
              <div class="alert">
                <strong style="color: rgb(51, 141, 56);">
                  <%= messages?? "" %>
                </strong>
              </div>
              <%}%>
                <%if(errors){%>

                  <div class="alert">
                    <strong style="color: rgb(245, 39, 108);">
                      <%= errors?? "" %>
                    </strong>
                  </div>
                  <%}%>



          </div>
        </div> <!-- / .card -->
      </div> <!-- .col-12 -->
    </div> <!-- .row -->
  </div> <!-- .container-fluid -->
</main> <!-- main -->

<script type="text/javascript">

  $(document).ready(function () {

    window.setTimeout(function () {
      $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
        $(this).remove();
      });
    }, 2000);

  });
</script>
<script>
  ClassicEditor
    .create(document.querySelector('#editor'), {
      language: {
        ui: 'en',
        content: "fa"
      },
      image: {
        toolbar: ['toggleImageCaption', 'imageTextAlternative', 'ckboxImageEdit']
      }
    })
    .then(editor => {
      console.log(editor);
    })
    .catch(error => {
      console.error(error);
    });
</script>