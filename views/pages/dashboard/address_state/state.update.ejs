<main role="main" class="main-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">

                <div class="card shadow mb-4">
                    <div class="card-header">
                        <strong class="card-title">ویرایش نقش</strong>
                        <a href="/dashboard/state/"
                            style="color: #1b68ff; font-size: 0.85rem; text-decoration: none; margin: 2px ; border-radius: 10px; position: absolute; left: 20px; border: 1px solid #1b68ff; padding: 0px 10px;">
                            <i class="fa fa-sign-out" style="margin: 5px;"></i>
                            بازگشت</a>
                        <a href="/dashboard/state/add"
                            style="color: #1b68ff; font-size: 0.85rem; text-decoration: none; margin: 2px ; border-radius: 10px; position: absolute; left: 120px; border: 1px solid #1b68ff; padding: 0px 10px;">
                            <i class="fa fa-add" style="margin: 5px;"></i>
                            افزودن</a>
                    </div>
                    <div class="card-body">
                        <form id="frm_updateStateAddress">
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="form-group mb-3">
                                        <label for="stateName" style="font-size: 0.9rem;">عنوان</label>
                                        <%if(state.stateName) {%>
                                            <input type="text" name="stateName" id="stateName" class="form-control"
                                                style="background-color: rgb(243, 243, 243);"
                                                placeholder="<%=state.stateName%>">
                                            <%} else {%>
                                                <input type="text" name="stateName" id="stateName" class="form-control"
                                                    style="background-color: rgb(243, 243, 243);" placeholder="">
                                                <%}%>
                                    </div>

                                    <div class="form-group mb-2">
                                        <button onclick="updateStateAddress('<%= state.code%>')" class="btn btn-primary"
                                            style="padding: 5px 20px; font-size: 0.85rem;">ویرایش اطلاعات</button>
                                    </div>

                                </div>
                            </div>
                        </form>

                        <%if(messages){%>
                            <div class="alert">
                                <strong style="color: rgb(51, 141, 56);">

                                    <%= messages?? "" %>
                                </strong>
                            </div>
                            <%}%>
                                <%if(errors){%>

                                    <div class="alert">
                                        <strong style="color: rgb(245, 39, 108);">
                                            <%= errors?? "" %>
                                        </strong>
                                    </div>
                                    <%}%>



                    </div>
                </div> <!-- / .card -->
            </div> <!-- .col-12 -->
        </div> <!-- .row -->
    </div> <!-- .container-fluid -->
</main> <!-- main -->

<script type="text/javascript">

    $(document).ready(function () {

        window.setTimeout(function () {

            $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                $(this).remove();
            });
        }, 2000);

    });
</script>